<div>
    <p><%= flash[:notice] %></p>
     <% if @book.errors.any? %>
      <div class="error_explanation">
        <h3><%= @book.errors.count %> errors prohibited this book from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end%>
        </ul>
      </div>
    <% end %>
</div>
<div class="container">
    <div class="row">
        <%= render 'users/userinfo', user: current_user %>
        <%= render 'books/new',book: @book%>
        <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                        <th></th>
                    </tr>
                </thead>
                <% @books.each do |b|%>
                <tbody>
                    <th>
                        <%= link_to user_path(b.user.id) do %>
                        <%= image_tag b.user.get_profile_image(100,100) %>
                        <% end %>
                    </th>
                    <th><%= link_to b.title,book_path(b.id)%></th>
                    <th><%= b.body %></th>
                </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>